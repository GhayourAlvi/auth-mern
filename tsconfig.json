{
  "compilerOptions": {
    "target": "ES2020",
    "module": "node16",
    "strict": true,
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "*": ["*", "Controllers/*", "Routes/*", "Services/*", "Utils/*", "Middlewere/*"]
    },
    "types": ["node", "jest"],
    "lib": ["ES2020"]
  },
  "include": ["./**/*.ts", "./**/*.js"],
  "exclude": ["node_modules", "dist"]
}